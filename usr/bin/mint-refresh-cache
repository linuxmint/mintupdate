#!/usr/bin/python3
import os

if __name__ == "__main__":
    if os.getuid() == 0:
        try:
            from apt import Cache

            cache = Cache()
            cache.update()

        except Exception as e:
            print("Error: mint-refresh-cache could not update the cache.")
            print(e)
            
    else: print("Error: mint-refresh-cache requires admin privileges")
