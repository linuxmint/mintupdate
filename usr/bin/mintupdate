#!/usr/bin/python3
import os
from argparse import ArgumentParser

if __name__ == "__main__":
    parser = ArgumentParser(prog="mintupdate", description="The Linux Mint Update Manager")

    parser.add_argument("-v", "--version", action="version", version="__DEB_VERSION__", help="Display the current version")

    args = parser.parse_args()

    os.system("/usr/lib/linuxmint/mintUpdate/mintUpdate.py show &")
